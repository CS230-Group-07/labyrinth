<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.MenuController">
   <center>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label text="Game Options" textAlignment="CENTER">
               <font>
                  <Font name="Quicksand Medium" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="48.0" prefWidth="580.0">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#handleNewGame" text="New Game">
                     <font>
                        <Font name="Quicksand Medium" size="12.0" />
                     </font>
                  </Button>
                  <TextField text="Board Name">
                     <font>
                        <Font name="Quicksand Medium" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="62.0" prefWidth="580.0">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#handleLoadGame" text="Load Game">
                     <font>
                        <Font name="Quicksand Medium" size="12.0" />
                     </font>
                  </Button>
                  <TextField text="Game Name">
                     <font>
                        <Font name="Quicksand Medium" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Button alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#openLeaderboard" text="Leaderboard">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER">
               <children>
                  <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleSaveGame" text="Save Game" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label fx:id="boardSelectionLabel" text="Board" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Quicksand Medium" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <MenuButton alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="NewGame">
                    <items>
                      <MenuItem mnemonicParsing="false">
                           <graphic>
                              <Button mnemonicParsing="false" onAction="#handleNewGame" text="board1">
                                 <font>
                                    <Font name="Quicksand Medium" size="12.0" />
                                 </font>
                              </Button>
                           </graphic>
                        </MenuItem>
                      <MenuItem mnemonicParsing="false">
                           <graphic>
                              <Button mnemonicParsing="false" onAction="#handleNewGame" text="board2" />
                           </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false">
                           <graphic>
                              <Button mnemonicParsing="false" onAction="#handleNewGame" text="board3" />
                           </graphic>
                        </MenuItem>
                    </items>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </MenuButton>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <ListView id="playerListView" fx:id="playerProfilesList" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
            <Button fx:id="startGame" mnemonicParsing="false" onAction="#onStartGame" text="Start Game">
             <font>
                 <Font size="14.0" />
             </font>
            </Button>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleLoadGame" text="Load Game">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <TextField text="Game Name">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
